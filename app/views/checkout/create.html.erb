<h1 class="title has-text-warning-dark">Product Checkout</h1>

<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= @product.name %></p>
        <p class="subtitle is-6"><%= number_to_currency(@product.price.to_f / 100) %></p>
      </div>
    </div>

    <div class="content">
      <%= render partial: "pay/stripe/checkout_button",
        locals: { session: @checkout_session, title: "Buy the product now" }
      %>
    </div>
  </div>
</div>