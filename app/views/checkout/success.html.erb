<div class="container">
  <h1 class="title has-text-info">Success</h1>
  <p>You just bought my stuff!</p>
  <h2 class="subtitle">Your total was $<%= @session.amount_total.to_f / 100 %></h2>
  <br>
  <% @line_items.each do |item| %>
    <h3 class="has-text-info"><%= item.description %></h3>
    <br>
    <p>$<%= item.price.unit_amount.to_f / 100 %></p>

  <% end %>
</div>
