<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block", class: "label" %>
    <div class="control">
      <%= form.text_field :name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :price, style: "display: block", class: "label" %>
    <div class="control">
      <%= form.text_field :price_cents, class: "input" %>
    </div>
  </div>

  <div class="actions control buttons">
    <%= form.submit class: "button is-link is-light" %>
    <%= link_to "Back to products", products_path, class: "button is-link is-light" %>
  </div>
<% end %>
