<div id="<%= dom_id product %>">
  <tr>
  <td><%= product %></td>
  <td><%= number_to_currency(product.price.to_f / 100) %></td>
  <td><%= link_to "Buy now!", checkout_create_path(id: product.id), class: "button is-link is-light is-small" %></td>
  <td><%= link_to "Show this product", product, class: "button is-link is-light is-small" %></td>
  <td><%= link_to "Edit this product", edit_product_path(product), class: "button is-link is-light is-small" %></td>
  <td><%= link_to "Delete this product", product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-link is-light is-small" %></td>
  </tr>
</div>
