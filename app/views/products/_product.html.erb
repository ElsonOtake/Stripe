<div id="<%= dom_id product %>">
  <tr>
  <td><%= product %></td>
  <td><%= number_to_currency(product.price_cents) %></td>
  <td><%= link_to "Buy now!", checkout_create_path(id: product.id), class: "button is-primary is-small" %></td>
  <td><%= link_to "Edit", edit_product_path(product), class: "button is-primary is-small" %></td>
  <td><%= link_to "Delete", product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-primary is-small" %></td>
  </tr>
</div>
